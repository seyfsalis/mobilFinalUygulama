<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentToast"
    android:background="#84FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Logo Seçiniz"
            android:textSize="25dp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoSecim"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/birinciSecim"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/ikinciSecim"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/ucuncuSecim"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/dorduncuSecim"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:src="@drawable/mylogo" />

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:src="@drawable/mylogoss" />

            <ImageView
                android:id="@+id/logo3"
                android:layout_width="90dp"
                android:layout_height="95dp"
                android:src="@drawable/mylogoss2" />

            <ImageView
                android:id="@+id/logo4"
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:src="@drawable/mylogoss3" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="İsim Giriniz"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/toastIsimText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:ems="10"
            android:hint="Lütfen isminizi giriniz."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/toastButon"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="TOAST MESAJI\nOLUŞTUR"
            android:textSize="20dp" />
    </LinearLayout>

</FrameLayout>